section
  float left

  .post-module
    margin auto
    overflow hidden
    width 100%

    aside
      box-sizing border-box
      float left
      width 50%
      height 45vw
      margin 0
      padding 0

      img
        width 100%
        float left

      &:not(.text)
        background #d4e5f3
        background -webkit-linear-gradient(to bottom, #eef2f3, #d4e5f3)
        background linear-gradient(to bottom, #eef2f3, #d4e5f3)

      &.text
        padding-top 90px
        padding-top 6vw
        position relative

        h1,
        h2,
        p
          max-width 390px
          margin 0 auto

        h1,
        h2
          text-align right

        h1
          line-height 1.1
          font-size 78px
          font-size 5.5vw
          word-spacing 5rem

        h2
          font-size 48px
          font-size 3.3vw

        span
          position absolute
          bottom 0
          left 50%
          margin-left -195px

          p
            font-weight 100

          a
            font-size 20pt
            float none
            padding 45px 0
            font-weight 400
            text-decoration none
            display block
            width 100%
            text-align center

    &:nth-of-type(2n)
      aside
        float right